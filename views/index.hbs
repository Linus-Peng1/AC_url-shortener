<div class="container my-3">
  <div class="d-flex justify-content-center">

    <div class="card my-5 text-center" style="width: 28rem;">
      <h2 class="card-title fw-bold">URL-Shortener</h2>
      <img src="https://d29fhpw069ctt2.cloudfront.net/icon/image/47999/preview.svg" class="mx-auto"
        style="width: 18rem;" alt="...">
      <div class="card-body">

        <form action="/shortURL" method="POST">
          <div class="row">
            <input type="url" name="fullURL" id="fullURL" placeholder="URL..." value="{{full}}" required>
            <div class="col align-self-center">
              <button type="submit" class="btn btn-outline-primary col-6 mt-3">Shorten</button>
            </div>
          </div>
        </form>

        {{#if short}}
        <div class="my-3">
          <h3>Sucess! Please use this link:</h3>
          <a href="/{{short}}" id="short-url">{{hostUrl}}</a>
        </div>
        {{/if}}

      </div>
    </div>

  </div>
</div>